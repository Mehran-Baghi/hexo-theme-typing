<% if (post.link){ %>
  <h1 itemprop="name">
    <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %></a>
  </h1>
<% } else if (post.title){ %>
  <% if (index){ %>
    <h1 itemprop="name">
      <a class="<%= class_name %>" href="<%- url_for(post.path) %>"><%= post.title %></a>
    </h1>
  <% } else { %>
    <h1 class="<%= class_name %>" itemprop="name">
      <%= post.title %><a class="Improve" href="https://github.com/Mehran-Baghi/mehranbaghi.com/edit/master/source/<%= (page.source) %>" title="Improve This Page"><span class="fa fa-pencil"></span></a>
    </h1>
  <% } %>
<% } %>
